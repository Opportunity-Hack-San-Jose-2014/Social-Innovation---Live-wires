     <script>
    function submitForm() {
        if(validateForm()) {
            alert('Event Created');
        }
    }

    function validateForm() {
        var missingFileds = ''
        var valid = true;
        if($('#eventId').val() == '') {
            valid = false;
            missingFileds += 'Event Id \n';           
        }
        if($('#eventName').val() == '') {
            valid = false;
            missingFileds += 'Event Name \n';           
        }
        if($('#year').val() == '') {
            valid = false;
            missingFileds += 'Event Year \n';           
        }
        if($('#location').val() == '') {
            valid = false;
            missingFileds += 'Event Location \n';           
        }

        if(!valid){
            alert('Please enter the below required fields:\n' + missingFileds);
        }
        return valid;
    }

    </script>

